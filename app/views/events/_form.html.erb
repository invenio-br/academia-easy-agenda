<div class="card">
  <%= simple_form_for event do |form| %>
    <div class="card-body">
      <%= form.input :name %>
      <%= form.input :description %>
      <div class="row">
        <div class="col-12 col-md-6">
          <%= form.input :started_at, html5: true %>
        </div>
        <div class="col-12 col-md-6">
          <%= form.input :finished_at, html5: true %>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <%= link_to "Voltar", events_path, class: "btn btn-secondary" %>
      <%= form.button :button, class: "btn-primary" %>
    </div>
  </div>
<% end %>
